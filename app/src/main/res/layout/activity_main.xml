<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/tvCurrentCity"
        android:layout_width="211dp"
        android:layout_height="48dp"
        android:layout_marginStart="81dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="41dp"
        app:layout_constraintBottom_toTopOf="@+id/switchCity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/findButton"
        android:layout_width="183dp"
        android:layout_height="43dp"
        android:layout_marginStart="101dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="134dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startDate" />

    <TextView
        android:id="@+id/startDate"
        android:layout_width="122dp"
        android:layout_height="39dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="71dp"
        android:layout_marginEnd="32dp"
        android:hint="Select start date"
        app:layout_constraintEnd_toStartOf="@+id/endDate"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switchCity" />

    <TextView
        android:id="@+id/endDate"
        android:layout_width="122dp"
        android:layout_height="39dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="139dp"
        android:layout_marginEnd="56dp"
        android:hint="Select end date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/startDate"
        app:layout_constraintTop_toBottomOf="@+id/tvCurrentCity" />

    <Switch
        android:id="@+id/switchCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="83dp"
        android:layout_marginTop="41dp"
        android:text="Search different location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCurrentCity" />

</android.support.constraint.ConstraintLayout>